<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:padding="24dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/navbar_user_img"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circleImageView"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/navbar_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_toEndOf="@+id/navbar_user_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/navbar_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Gabriela silva"
            android:textColor="@color/white"
            android:textFontWeight="600"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/navbar_linear_layout"
            app:layout_constraintTop_toBottomOf="@id/navbar_linear_layout" />

        <TextView
            android:id="@+id/navbar_user_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:text="Paciente"
            android:textColor="@color/gray"
            android:textFontWeight="500"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/navbar_user_name"
            app:layout_constraintTop_toBottomOf="@id/navbar_user_name" />

    </LinearLayout>

</RelativeLayout>